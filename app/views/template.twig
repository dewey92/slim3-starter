<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		{% block meta %}{% endblock %}
		<!-- <meta name="description" content="Share Ideas. Discover More."> -->

		<title>{% block title %}{% endblock %} | Katanium</title>

		<!-- Load favicon -->
		<link href="/public/images/k-logo.png" rel="icon" type="image/x-icon">

		<!-- Load fonts -->
		<link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,300,300italic,400italic,600,600italic,700,700italic' rel='stylesheet' type='text/css'>
		<link href="http://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic" rel="stylesheet" type="text/css">

		<!-- Bootstrap CSS & Font Awesome -->
		<link href="/public/bootstrap/css/bootstrap.min.css" rel="stylesheet">
		<!-- <link href="./public/font-awesome/css/font-awesome.min.css" rel="stylesheet"> -->
		<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" rel="stylesheet">
		<link href="/public/css/bootstrap-social.css" rel="stylesheet">

		<!-- My own style -->
		{% block style %}{% endblock %}

		<script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" type="text/javascript"></script>

		<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
		<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
		<!--[if lt IE 9]>
			<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
			<script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
		<![endif]-->
	</head>
	<body>

		<div id="main-wrapper">
			<!-- Navbar -->
			<header>
				{% include 'partials/header.twig' %}
			</header>

			<!-- Main Content -->
			<main id="main-container" {% if home %}style="margin-top: 0"{% endif %}>
				{% block content %}{% endblock %}
			</main>

			<!-- Pre Footer -->
			{% block prefooter %}{% endblock %}

			<!-- Footer -->
			<footer id="footer">
				{% include 'partials/footer.twig' %}
			</footer>
		</div>

		<!-- Modal Signin -->
		{% include 'partials/login-modal.twig' %}

		<!-- jQuery -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
		<!-- Bootstrap & Other JavaScript Libs -->
		<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
		<script src="/public/js/libs/faker.min.js"></script>
		<!-- Main App -->

		{% block script %}

		<script src="https://cdnjs.cloudflare.com/ajax/libs/vue/1.0.10/vue.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/vue-resource/0.1.17/vue-resource.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.6/moment.min.js"></script>

		{% endblock %}

	</body>
</html>
